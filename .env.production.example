# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=production
PORT=3000

# ==========================================
# DATABASE
# ==========================================
DATABASE_HOST=your-db-host.example.com
DATABASE_PORT=5432
DATABASE_USER=passport_prod_user
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DATABASE_NAME=device_passport_prod
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=your-redis-host.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_TLS=true
REDIS_DB=0

# ==========================================
# JWT & SECURITY
# ==========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_64_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_DIFFERENT_SECRET_64_CHARS
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# COMPANY CONFIGURATION
# ==========================================
COMPANY_CODE=MED
COMPANY_NAME=MedTech Industrial

# ==========================================
# CORS
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
RATE_LIMIT_ENABLED=true

# ==========================================
# FILE UPLOAD
# ==========================================
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf
UPLOAD_DEST=./uploads

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
# Sentry
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==========================================
# EMAIL (Optional)
# ==========================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@example.com
EMAIL_PASSWORD=CHANGE_ME_EMAIL_PASSWORD
EMAIL_FROM=Device Passport System <noreply@example.com>
EMAIL_SECURE=true

# ==========================================
# FRONTEND URL
# ==========================================
FRONTEND_URL=https://yourdomain.com

# ==========================================
# API BASE URL
# ==========================================
API_BASE_URL=https://api.yourdomain.com

# ==========================================
# BLOCKCHAIN (Optional - Phase 4)
# ==========================================
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_CONTRACT_ADDRESS=
BLOCKCHAIN_PRIVATE_KEY=

# ==========================================
# BACKUP
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_MARKETPLACE_ENABLED=true
FEATURE_EXPERT_SYSTEM_ENABLED=true
FEATURE_BLOCKCHAIN_ENABLED=false
FEATURE_WEBSOCKET_ENABLED=false

# ==========================================
# PERFORMANCE
# ==========================================
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true
ENABLE_COMPRESSION=true

# ==========================================
# SECURITY HEADERS
# ==========================================
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# ==========================================
# SSL/TLS
# ==========================================
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_CA_PATH=/path/to/ca.pem
